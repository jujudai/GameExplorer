<div class="container mt-4">
  <div class="row">
    <!-- 左側: 新規登録フォーム (4/12) -->
    <div class="col-md-4">
      <h3>ゲーム新規登録</h3>
      <%= render 'form', game: @game %>
    </div>

    <!-- 右側: ゲーム一覧 (8/12) -->
    <div class="col-md-8">
      <h3>ゲーム一覧</h3>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>画像</th>
            <th>ゲーム名</th>
            <th>紹介文</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td>
                <% if game.image.attached? %>
                  <%= image_tag game.image, size: "100x100", class: "img-thumbnail" %>
                <% else %>
                  <span>画像なし</span>
                <% end %>
              </td>
              <td><%= game.name %></td>
              <td><%= game.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>