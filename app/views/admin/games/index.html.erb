<div class="container mt-4">

  <h2>新規ゲーム登録</h2>
  <%= render 'form', game: @game %>

  <h1>ゲーム一覧</h1>

  <div class="row">
    <% @games.each_with_index do |game, index| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <% if game.image.attached? %>
            <%= link_to admin_game_path(game) do %>
              <%= image_tag game.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% end %>
          <% else %>
            <div class="text-center py-5 bg-light">画像なし</div>
          <% end %>

          <div class="card-body text-center">
            <h5 class="card-title"><%= link_to game.title, admin_game_path(game), class: "text-dark text-decoration-none" %></h5>
          </div>
        </div>
      </div>

      <% if (index + 1) % 3 == 0 && index + 1 != @games.size %>
        </div><div class="row">
      <% end %>
    <% end %>
  </div>
</div>
