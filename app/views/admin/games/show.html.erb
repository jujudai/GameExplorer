<div class="container mt-4">
  <h1><%= @game.title %></h1>

  <div class="row">
    <div class="col-md-6">
      <% if @game.image.attached? %>
        <%= image_tag @game.image, class: "img-fluid rounded shadow" %>
      <% else %>
        <p>画像なし</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h4>紹介文</h4>
      <p><%= @game.description %></p>

      <h4>ジャンル</h4>
      <p><%= @game.genre.present? ? @game.genre.name : "未分類" %></p>

      <div class="mt-4">
        <%= link_to "編集", edit_admin_game_path(@game), class: "btn btn-warning" %>
        <%= link_to "削除", admin_game_path(@game), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "ゲーム一覧に戻る", admin_games_path, class: "btn btn-secondary" %>
  </div>
</div>
