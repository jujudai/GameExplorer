<div class="container mt-4">
  <h1>ジャンル一覧</h1>

  <table class="table table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ジャンル名</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-warning btn-sm" %>
            <%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to "新規ジャンル登録", new_admin_genre_path, class: "btn btn-primary" %>
  </div>
</div>
