<div class="container mt-4">
  <h1>新規ジャンル登録</h1>

  <%= form_with model: @genre, url: admin_genres_path, local: true, class: "card p-3 shadow" do |f| %>
    <div class="mb-3">
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名を入力" %>
    </div>

    <%= f.submit "登録", class: "btn btn-primary w-100" %>
  <% end %>

  <div class="mt-3">
    <%= link_to "戻る", admin_genres_path, class: "btn btn-secondary" %>
  </div>
</div>
