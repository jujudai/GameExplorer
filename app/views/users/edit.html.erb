<h1>ユーザー編集</h1>
<br>
<%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div class="actions">
    <%= form.submit '更新' %>
  </div>
<% end %>

<%= link_to '戻る', user_path(current_user) %>  <!-- ログインユーザーのマイページに戻る -->
