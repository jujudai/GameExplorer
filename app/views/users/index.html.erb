<h1>会員一覧</h1>


<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.name %> - <%= user.email %>
    </li>
    <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
    </li>
  <% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>管理者</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'はい' : 'いいえ' %></td>
        <td>
          <%= link_to '編集', edit_admin_user_path(user) %> |
          <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

